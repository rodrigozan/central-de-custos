// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user       Int            @id @default(autoincrement())
  nm_user String @db.VarChar(256)
  of_user String @db.VarChar(256)

  dp_user       Department   @relation(fields: [department_id], references: [id_department])
  department_id Int

  CostsCentral CostsCentral[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
}

model Department {
  id_department Int            @id @default(autoincrement())
  nm_department String @db.VarChar(256)
  
  User User[]
  CostsCentral CostsCentral[]

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
}

model CostsCentral {
  id_costs_central Int            @id @default(autoincrement())
  nm_costs_central String @db.VarChar(256)
  de_costs_central String @db.VarChar(256)
  pr_costs_central Int

  us_costs_central      User       @relation(fields: [user_id], references: [id_user])
  user_id          Int
  dp_costs_central Department @relation(fields: [department_id], references: [id_department])
  department_id    Int

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
}
